<!DOCTYPE html>
<html>

<%- include('../partials/head'); %>

<body>

    <div id="coalPowerPlantID" class="d-none"><%= coal_power_plant_id %></div>

    <%- include('../partials/header', { view_title: 'Electricity managment' }); %>

    <%- include('../partials/sideBar', { view: 'electricityManagment' }); %>

    <div id="content">

        <section>

            <div class="row">
                <div class="col-md-3 px-2">
                    <div class="card">
                        <div class="card-body">
                            <p class="h6 m-0"><small class="text-muted">Production</small></p>
                            <p class="m-0">
                                <span id="production" class="h4 font-weight-bold m-0"></span>
                                <small class="text-muted"> MWh</small>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 px-2">
                    <div class="card">
                        <div class="card-body">
                            <p class="h6 m-0"><small class="text-muted">Buffer filling</small></p>
                            <p class="m-0">
                                <span id="bufferFilling" class="h4 font-weight-bold m-0"></span>
                                <small class="text-muted"> %</small>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 ml-auto">
                    <button id="startAndStop" type="button" class="btn btn-danger btn-lg btn-block font-weight-bold">STOP</button>
                </div>
            </div>

        </section>

        <section>

            <div class="section-title">
                <h2>Production</h2>
                <h6>Electricity will be sent to the market anyway is the buffer is full.</p>
            </div>

            <form id="productionForm" method="post" action="/api/coal-power-plant/update-production">
                <div class="form-group">
                    <label for="productionBufferPercentage" class="m-0">Production destination</label>
                    <div class="input-group align-items-center">
                        <p class="input-group-prepend pt-1">To buffer (<span id="toBuffer"></span> %)</p>
                        <input type="range" class="form-control-range form-control mx-3" id="productionBufferPercentage">
                        <p class="input-group-append pt-1">To market (<span id="toMarket"></span> %)</p>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-3">
                    <button type="reset" class="btn btn-danger mr-2">Reset</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>

        </section>

        <section>

            <%- include('../partials/chart/productionChart'); %>

        </section>

        <%- include('../partials/footer'); %>
    </div>

    <%- include('../partials/messages'); %>

    <%- include('../partials/scripts', { view: `electricityManagment-admin` }); %>

</body>

</html>
