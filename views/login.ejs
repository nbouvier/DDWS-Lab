<!DOCTYPE html>
<html>

<%- include('../partials/head'); %>

<body>

    <%- include('../partials/header', { view_title: 'Login' }); %>

    <div id="content" class="ml-0">

        <section class="d-flex justify-content-center align-items-center flex-column" style="padding-top: 15vh">

            <form id="loginForm" method="post" action="/api/auth/login">
                <div class="form-group">
                    <label for="loginEmail">Email</label>
                    <input type="email" class="form-control" id="loginEmail"> <!-- aria-describedby="loginEmailHelp"> -->
                    <!-- <small id="loginEmailHelp" class="form-text text-muted">Email error.</small> -->
                </div>
                <div class="form-group">
                    <label for="loginPassword">Password</label>
                    <input type="password" class="form-control" id="loginPassword">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Login</button>
                <p>
                    <a href="/init-reset-password" class="mr-3">Forgot password ?</a>
                    <a href="/register">I don't have an account yet.</a>
                </p>
            </form>

        </section>

        <%- include('../partials/footer'); %>
    </div>

    <%- include('../partials/messages'); %>

    <%- include('../partials/scripts', { view: 'login' }); %>

</body>

</html>
