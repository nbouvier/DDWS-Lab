<!DOCTYPE html>
<html>

<%- include('../partials/head'); %>

<body>

    <% if(user_type == 'admin') { %>
    <div id="coalPowerPlantID" class="d-none"><%= coal_power_plant_id %></div>
    <% } else { %>
    <div id="houseID" class="d-none"><%= house_id %></div>
    <% } %>

    <%- include('../partials/header', { view_title: 'Dashboard' }); %>

    <%- include('../partials/sideBar', { view: 'home' }); %>

    <div id="content">

        <section>

            <%- include('../partials/chart/productionChart'); %>

            <div class="row">
                <% if(user_type == 'admin') { %>
                <div class="col-md-8">
                    <%- include('../partials/chart/electricityPriceChart'); %>
                </div>
                <% } else { %>
                <div class="col-lg-4">
                    <%- include('../partials/chart/windChart'); %>
                </div>

                <div class="col-lg-4">
                    <%- include('../partials/chart/electricityPriceChart'); %>
                </div>
                <% } %>


                <% if(user_type == 'admin') { %>
                <div class="col-md-4">
                <% } else { %>
                <div class="col-lg-4">
                <% } %>
                    <%- include('../partials/chart/bufferChart'); %>
                </div>
            </div>

        </section>

        <%- include('../partials/footer'); %>
    </div>

    <%- include('../partials/messages'); %>

    <%- include('../partials/scripts', { view: 'home' }); %>

</body>

</html>
