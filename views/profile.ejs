<!DOCTYPE html>
<html>

<%- include('../partials/head'); %>

<body>

    <div id="userID" class="d-none"><%= typeof preview_user_id != 'undefined' ? preview_user_id : user_id %></div>

    <%- include('../partials/header', { view_title: 'Profile' }); %>

    <%- include('../partials/sideBar', { view: 'profile' }); %>

    <div id="content">

        <section>

            <div class="section-title">
                <h2>Profile</h2>
            </div>

            <form id="profileForm" method="post" action="/api/user/update-profile">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="profileFirstName">First name</label>
                        <input type="text" class="form-control" id="profileFirstName">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="profileLastName">Last name</label>
                        <input type="text" class="form-control" id="profileLastName">
                    </div>
                </div>
                <div class="form-group">
                    <label for="profileAddress">Address</label>
                    <input type="text" class="form-control" id="profileAddress">
                </div>
                <div class="form-group">
                    <label for="profileAdditionalAddress">Addtional address</label>
                    <input type="text" class="form-control" id="profileAdditionalAddress">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="profileCity">City</label>
                        <input type="text" class="form-control" id="profileCity">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="profileZipCode">ZIP Code</label>
                        <input type="text" class="form-control" id="profileZipCode">
                    </div>
                </div>
                <% if(typeof preview_user_id == 'undefined') { %>
                <div class="d-flex justify-content-end mt-3">
                    <button type="reset" class="btn btn-danger mr-2">Reset</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <% } %>
            </form>

        </section>

        <section>

            <div class="section-title">
                <h2>Security</h2>
            </div>

            <form id="securityForm" method="post" action="/api/user/update-security">
                <div class="form-group">
                    <label for="securityEmail">Email</label>
                    <input type="email" class="form-control" id="securityEmail">
                </div>
                <% if(typeof preview_user_id == 'undefined') { %>
                <div class="form-group">
                    <button type="button" id="changePassword" class="btn btn-primary">Change password</button>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="reset" class="btn btn-danger mr-2">Reset</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
                <% } %>
            </form>

        </section>

        <% if(typeof preview_user_type != 'undefined' && preview_user_type == 'prosumer') { %>
        <section>

            <button id="seeElectricityManagment" type="button" class="btn btn-primary btn-lg btn-block">Electricity managment</button>

        </section>
        <% } %>

        <%- include('../partials/footer'); %>
    </div>

    <%- include('../partials/messages'); %>

    <%- include('../partials/scripts', { view: 'profile' }); %>

</body>

</html>
