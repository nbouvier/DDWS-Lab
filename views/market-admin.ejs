<!DOCTYPE html>
<html>

<%- include('../partials/head'); %>

<body>

    <div id="coalPowerPlantID" class="d-none"><%= coal_power_plant_id %></div>

    <%- include('../partials/header', { view_title: 'Market' }); %>

    <%- include('../partials/sideBar', { view: 'market' }); %>

    <div id="content">

        <section>

            <div class="row">
                <div class="col-md-8">
                    <%- include('../partials/chart/electricityPriceChart'); %>
                </div>

                <div class="col-md-4">
                    <form id="setPriceForm" method="post" action="/api/market/set-price">
                        <div class="form-group">
                            <label for="sellPrice">Price</label>
                            <div class="input-group">
                                <input type="number" step="0.001" class="form-control" id="setPricePrice">
                                <div class="input-group-append">
                                    <span class="input-group-text font-weight-bold">$/kW</span>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end mt-3">
                            <button type="reset" class="btn btn-danger mr-2">Reset</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>

        </section>

        <section>

            <div class="section-title">
                <h2>Order flow</h2>
            </div>

            <table id="orderFlowList" class="table">
                <thead>
                    <tr>
                        <th scope="col">Action</th>
                        <th scope="col">Amount (kW)</th>
                        <th scope="col">Price ($)</th>
                        <th scope="col">Total</th>
                        <th scope="col">User</th>
                        <th scope="col">Date</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

        </section>

        <%- include('../partials/footer'); %>
    </div>

    <%- include('../partials/messages'); %>

    <%- include('../partials/scripts', { view: 'market-admin' }); %>

</body>

</html>
