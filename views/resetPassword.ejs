<!DOCTYPE html>
<html>

<%- include('../partials/head'); %>

<body>

    <%- include('../partials/header', { view_title: 'Reset password' }); %>

    <div id="content" class="ml-0">

        <section class="d-flex justify-content-center align-items-center flex-column" style="padding-top: 15vh">

            <form id="resetPasswordForm" method="post" action="/api/auth/reset-password">
                <input type="hidden" id="resetPasswordHash" value=<%= hash %>>
                <div class="form-group">
                    <label for="resetPasswordPassword">New password</label>
                    <input type="password" class="form-control" id="resetPasswordPassword">
                </div>
                <div class="form-group">
                    <label for="resetPasswordPasswordConfirmation">New password (confirmation)</label>
                    <input type="password" class="form-control" id="resetPasswordPasswordConfirmation">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Change</button>
            </form>

        </section>

        <%- include('../partials/footer'); %>
    </div>

    <%- include('../partials/messages'); %>

    <%- include('../partials/scripts', { view: 'resetPassword' }); %>

</body>

</html>
